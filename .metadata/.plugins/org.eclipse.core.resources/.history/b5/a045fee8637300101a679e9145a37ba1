        driver.findElement(AppiumBy.accessibilityId("Month")).click();
        driver.findElement(AppiumBy.accessibilityId("Month")).sendKeys("August");
     // Tap on the field to open the UIDatePicker (if needed)
        driver.findElement(AppiumBy.accessibilityId("DateField")).click(); // Replace with actual trigger element

        // Wait a moment if necessary
        Thread.sleep(500);

        // Locate all wheels
        List<WebElement> wheels = driver.findElements(AppiumBy.className("XCUIElementTypePickerWheel"));

        // Set desired values
        wheels.get(0).sendKeys("August");  // Month
        wheels.get(1).sendKeys("12");      // Day
        wheels.get(2).sendKeys("2025");    // Year

